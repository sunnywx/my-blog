{
  "private": true,
  "name": "wx-blog",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "rimraf build && preact build --no-sw --prerenderUrls prerender-urls.js && cp -r public/*.json build",
    "serve": "sirv build --cors --single --host 0.0.0.0 --port 9090",
    "dev:watch": "preact watch --no-sw",
    "dev:prerender": "node-dev scripts/prerender-urls.js",
    "dev:server": "node-dev scripts/proxy-server.js",
    "dev": "run-p dev:*",
    "lint": "eslint src",
    "test": "jest",
    "dep:github": "npx gh-pages -d build -b gh-page",
    "dep:vps": "rsync -avz --delete build/ bwg:/var/www/html"
  },
  "dependencies": {
    "@preact/signals": "^1.1.1",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.5",
    "gitalk": "^1.8.0",
    "htm": "^3.1.1",
    "marked": "^4.1.1",
    "normalize.css": "^8.0.1",
    "preact": "^10.10.0",
    "preact-render-to-string": "^5.2.1",
    "preact-router": "^3.2.1",
    "prismjs": "^1.29.0",
    "react-icons": "^4.4.0"
  },
  "devDependencies": {
    "@preact/prerender-data-provider": "^3.0.1",
    "@types/enzyme": "^3.10.12",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "babel-plugin-prismjs": "^2.1.0",
    "cors": "^2.8.5",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^4.0.1",
    "eslint": "8.22.0",
    "eslint-config-preact": "^1.3.0",
    "express": "^4.18.2",
    "gh-pages": "^4.0.0",
    "jest": "^27.5.1",
    "jest-preset-preact": "^4.0.5",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "node-dev": "^7.4.3",
    "npm-run-all": "^4.1.5",
    "preact-cli": "^3.4.0",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "sass-loader": "10",
    "sirv-cli": "^2.0.2",
    "typescript": "^4.5.2"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  }
}
